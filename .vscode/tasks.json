{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "tsc: watch - tsconfig.json"
    },
    {
      "type": "shell",
      "command": "pnpm run lint",
      "group": "build",
      "problemMatcher": ["$eslint-stylish"],
      "label": "lint:watch",
      "detail": "esw .eslintrc.js '{src,docs,test}/**/*.ts'"
    }
  ]
}
